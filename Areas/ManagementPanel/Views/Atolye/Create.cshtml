@{
    Layout = "_Layout";
}
  
<div class="container " style="margin-top:110px; width:50%">
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Atolye Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Create" asp-controller="Atolye" method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Atolye Adı</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Atolye Adı">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
</div>